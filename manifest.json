{
  "manifest_version": 3,
  "name": "Auto Mute Meet",
  "version": "1.1",
  "description": "Mutes all other Google Meet tabs when you switch to one.",
  "permissions": ["scripting", "tabs", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "https://meet.google.com/*",
    "https://*.zoom.us/*",
    "https://teams.microsoft.com/*"
  ],
  "icons": {
    "128": "mute.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "mute.png"
  }
}
